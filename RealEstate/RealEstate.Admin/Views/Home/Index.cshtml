@model HomeViewModel
@{
    ViewData["Title"] = "Özet";
}

    <div class="row mb-9 align-items-center">
        <div class="col-sm-6 mb-8 mb-sm-0">
            <h2 class="fs-4 mb-0">Anasayfa/</h2>
            <p class="mb-0">@ViewData["Title"]</p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-xxl-3 mb-7">
            <div class="card rounded-4">
                <div class="card-body p-7">
                    <div class="d-flex">
                        <div class="me-6">
                            <span class="square d-flex align-items-center justify-content-center fs-5 badge rounded-circle text-green bg-green-light" style="--square-size: 48px">
                                <svg class="icon">
                                    <use xlink:href="#circle-dollar"></use>
                                </svg>
                            </span>
                        </div>
                        <div class="media-body">
                            <h6 class="mb-4 card-title">Kullanıcı</h6><span class="fs-4 d-block font-weight-500 text-primary lh-12">@Model.UserCount</span><span class="fs-14px">adet kullanıcı kayıtlı.</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xxl-3 mb-7">
            <div class="card rounded-4">
                <div class="card-body p-7">
                    <div class="d-flex">
                        <div class="me-6"><span class="square d-flex align-items-center justify-content-center fs-5 badge rounded-circle text-success bg-success-light" style="--square-size: 48px"><i class="fas fa-truck"></i></span></div>
                        <div class="media-body">
                            <h6 class="mb-4 card-title">İlan</h6><span class="fs-4 d-block font-weight-500 text-primary lh-12">@Model.ActiveAdvertCount</span><span class="fs-14px">adet yayında olan ilan.</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xxl-3 mb-7">
            <div class="card rounded-4">
                <div class="card-body p-7">
                    <div class="d-flex">
                        <div class="me-6"><span class="square d-flex align-items-center justify-content-center fs-5 badge rounded-circle text-warning bg-warning-light" style="--square-size: 48px"><i class="fas fa-qrcode"></i></span></div>
                        <div class="media-body">
                            <h6 class="mb-4 card-title">İlan</h6><span class="fs-4 d-block font-weight-500 text-primary lh-12">@Model.PendingAdvert</span><span class="fs-14px">adet onay bekleyen ilan</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xxl-3 mb-7">
            <div class="card rounded-4">
                <div class="card-body p-7">
                    <div class="d-flex">
                        <div class="me-6"><span class="square d-flex align-items-center justify-content-center fs-5 badge rounded-circle text-info bg-info-light" style="--square-size: 48px"><i class="fas fa-shopping-bag"></i></span></div>
                        <div class="media-body">
                            <h6 class="mb-4 card-title">İlan</h6><span class="fs-4 d-block font-weight-500 text-primary lh-12">@Model.DectiveAdvertCount</span><span class="fs-14px">adet onaylanmayan ilan.</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
