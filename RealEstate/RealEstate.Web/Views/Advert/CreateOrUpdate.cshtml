@using RealEstate.Web.Models.User.Advert
@model CreateOrUpdateViewModel
<section>
	
	<div class="container-fluid">

		<div class="row">

			<div class="col-lg-3 col-md-4">
				@Html.Partial("UserMenuPartial", new RealEstate.Web.Models.Header.UserMenuViewModel());
			</div>
			<div class="col-lg-9 col-md-12">

				<div class="submit-page">
					<form href="/kullanici/ilanolustur/@Model.Id" method="post">
						@Html.HiddenFor(x=> x.Id);
						<!-- Basic Information -->
						<div class="form-submit">
							<h3>Temel Bilgiler</h3>
							<div class="submit-section">
								<div class="form-row">

									<div class="form-group col-md-12">
										<label>İlan Başlığı<a href="#" class="tip-topdata" data-tip="Property Title"><i class="ti-help"></i></a></label>
										@Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "ilan başlığı giriniz" })
										<span asp-validation-for="Title" class="text-danger"></span>
									</div>

									<div class="form-group col-md-6">
										<label>Fiyat</label>
										@Html.TextBoxFor(x => x.Price, new { @class = "form-control", type = "number", placeholder = "TL" })
										<span asp-validation-for="Price" class="text-danger"></span>
									</div>

									<div class="form-group col-md-6">
										<label>Metrekare</label>
										@Html.TextBoxFor(x => x.Area, new { @class = "form-control", type = "number", placeholder = "xxx" })
										<span asp-validation-for="Area" class="text-danger"></span>
									</div>
									<div class="form-group col-md-6">
										<label>Oda Sayısı</label>
										@Html.TextBoxFor(x => x.Rooms ,new { @class = "form-control", placeholder = "3+1 , 2+1" })
										<span asp-validation-for="Price" class="text-danger"></span>
									</div>

									<div class="form-group col-md-6">
										<label>Bulunduğu Kat</label>
										@Html.TextBoxFor(x => x.Floor, new { @class = "form-control", type = "number", placeholder = "1,2,3" })
									</div>
								</div>
							</div>
						</div>

						<!-- Gallery -->
					

						<!-- Location -->
						<div class="form-submit">
							<h3>Lokasyon</h3>
							<div class="submit-section">
								<div class="form-row">

									<div class="form-group col-md-6">
										<label>Adres</label>
										@Html.TextBoxFor(x => x.Address, new { @class = "form-control", placeholder = "Açık adresi giriniz" })
										<span asp-validation-for="Address" class="text-danger"></span>
									</div>

									<div class="form-group col-md-6">
										<label>İl</label>
										@Html.TextBoxFor(x => x.County, new { @class = "form-control", placeholder = "İl bilgisini girin" })
										<span asp-validation-for="County" class="text-danger"></span>
								
									</div>

									<div class="form-group col-md-6">
										<label>İlçe</label>
										@Html.TextBoxFor(x => x.Town, new { @class = "form-control", placeholder = "İlçe bilgisini girin" })
										<span asp-validation-for="Town" class="text-danger"></span>
									</div>

									<div class="form-group col-md-6">
										<label>Mahalle</label>
										@Html.TextBoxFor(x => x.Neighbourhood, new { @class = "form-control", placeholder = "Mahalle köy bilgisini girin" })
										<span asp-validation-for="Neighbourhood" class="text-danger"></span>
									</div>

								</div>
							</div>
						</div>

						<!-- Detailed Information -->
						<div class="form-submit">
							<h3>Detaylı Açıklama</h3>
							<div class="submit-section">
								<div class="form-row">

									<div class="form-group col-md-12">
										<label>Açıklama bilgisi</label>
										@Html.TextAreaFor(x=> x.Description, new{@class="form-control" ,placeholder="ilan detaylı açıklama bilgisini girin"})
									</div>
