@using RealEstate.Web.Models.Home
@model HomeAdvertListView

@{
    ViewData["Title"] = "Home Page";
}
<div class="image-cover hero-banner" style="background:url(/img/img_1.jpg) no-repeat;" data-overlay="5">
	<div class="container">

		<h1 class="big-header-capt mb-0">Neyi Aramıştınız?</h1>
		<p class="text-center mb-5">Öne çıkan özellikleri girip aradığınızı daha hızlı bulun.</p>

		<div class="full-search-2 eclip-search italian-search hero-search-radius">
			<div class="hero-search-content">
				<form asp-action="arama" asp-controller="ilanlar" method="post">
				<div class="row">
					<div class="col-lg-4 col-md-3 col-sm-12 small-padd">
						<div class="form-group">
							<div class="input-with-icon">
								@Html.DropDownListFor(x => x.SelectedCountId, Model.CountyList, "Adres Seçiniz", new { @class = "form-control", id = "CountyList" })
								<i class="ti-briefcase"></i>
							</div>
						</div>
					</div>


					<div class="col-lg-4 col-md-3 col-sm-12 small-padd">
						<div class="form-group">
							<div class="input-with-icon b-l b-r">
								@* 	@Html.DropDownListFor(x => x.SelectedTownId,Model.CountyList ,new { @class = "form-control", id = "TownList" }) *@
								@Html.DropDownListFor(x => x.SelectedTownId, Model.TownList, "Adres Seçiniz", new { @class = "form-control", id = "TownList" })
				@* 				<select id="TownList" class="form-control">

									<!-- Options buraya eklenecek -->
								</select> *@
								<i class="ti-location-pin"></i>
							</div>
						</div>
					</div>
					<div class="col-lg-4 col-md-2 col-sm-12 small-padd">
						<div class="form-group">
							<button type="submit"  class="btn search-btn">Bul</button>
						</div>
					</div>
				
				</form>
				</div>

			</div>
		</div>
	</div>

</div>

<section>
	<div class="container">

		<div class="row">
			<div class="col-lg-12 col-md-12">
				<div class="sec-heading center">
					<h2>Yeni & Öne çıkan</h2>
					<p>
						Yerel şehrinizde bulunan yeni ve öne çıkan mülkleri bulun.
					</p>
				</div>
			</div>
		</div>

		<div class="row">
			<!-- Single Property -->
			@foreach (var item in Model.HomeAdvertModels)
			{
				<div class="col-lg-4 col-md-6 col-sm-12">
					<div class="property-listing property-2">

						<div class="listing-img-wrapper">
							<div class="list-img-slide">
								<div class="click">
									<div><a href="/ilanlar/ilandetay/@item.Id"><img src="~/img/img_1.jpg" class="img-fluid mx-auto" alt="" /></a></div>
									<div><a href="single-property-1.html"><img src="~/img/img_3.jpg" class="img-fluid mx-auto" alt="" /></a></div>
									<div><a href="single-property-1.html"><img src="~/img/img_3.jpg" class="img-fluid mx-auto" alt="" /></a></div>
								</div>
							</div>
							<span class="property-type">@item.UserFullName</span>
						</div>
						<div class="price-features-wrapper">
							<div class="listing-price-fx">
								<h6 class="listing-card-info-price">Fiyat:@item.Price ₺</h6>
							</div>
							<div class="list-fx-features">
								<div class="listing-card-info-icon">
									<span class="inc-fleat inc-bed">@item.Rooms</span>
								</div>
								<div class="listing-card-info-icon">
									<span class="inc-fleat inc-fleat">İl:@item.County </span>
								</div>
							</div>
						</div>

					</div>
				</div>
			}
			
			<!-- End Single Property -->
		</div>

		<div class="row">
			<div class="col-lg-12 col-md-12">
				<div class="text-center mt-4">
					<a href="#" class="btn btn-theme">Daha Fazla Göster</a>
				</div>
			</div>
		</div>

	</div>
</section>

